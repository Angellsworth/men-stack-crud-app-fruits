<!-- views/fruits/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Include the head partial with a dynamic title -->
    <%- include("../partials/head", { title: `Edit: ${fruit.name}` }) %>
  </head>
  <body>
    <!-- Include the navigation bar partial -->
    <%- include("../partials/navbar") %>

    <h1>Edit <%= fruit.name %></h1>

    <!-- Edit Form: Sends updated data to PUT /fruits/:id -->
    <form action="/fruits/<%= fruit._id %>?_method=PUT" method="POST">
      
        <!-- Name Input -->
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" value="<%= fruit.name %>" required />

        <!-- Checkbox for "Ready to Eat?" -->
        <label for="isReadyToEat">Ready to Eat?</label>
        <input type="checkbox" name="isReadyToEat" id="isReadyToEat"
            <% if (fruit.isReadyToEat) { %> checked <% } %> />
    
        <!-- Submit Button -->
        <button type="submit">Update Fruit</button>
    </form>

    <!-- Back to Fruits List -->
    <a href="/fruits">Back to Fruits</a>

    <!-- Include the footer partial -->
    <%- include("../partials/footer") %>
  </body>
</html>