<!-- views/fruits/show.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include the head partial, dynamically setting the title -->
    <%- include("../partials/head", { title: `Fruit: ${fruit.name}` }) %>
</head>
<body>
    <!-- Include the navigation bar partial -->
    <%- include("../partials/navbar") %>

    <!-- Displays the name of the fruit -->
    <h1><%= fruit.name %></h1>

    <!-- Conditional Rendering: Checks if the fruit is ready to eat -->
    <% if (fruit.isReadyToEat) { %>
        <p>This fruit is ready to eat!</p>
    <% } else { %>
        <p>This fruit is not ready to eat!</p>
    <% } %>

    <!-- DELETE FORM -->
    <!-- This form sends a DELETE request using method override -->
    <form action="/fruits/<%= fruit._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete <%= fruit.name %></button>
    </form>

    <!-- Takes user to the edit form for this specific fruit -->
    <!-- EDIT BUTTON (Styled as a Button) -->
<a href="/fruits/<%= fruit._id %>/edit" class="button">Edit: <%= fruit.name %></a>

    <!-- Include the footer partial -->
    <%- include("../partials/footer") %>
</body>
</html>